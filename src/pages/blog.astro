---
import { getCollection } from 'astro:content';
import Layout from '../layouts/Layout.astro';

const title = "ブログ | MokuLog";
const posts = await getCollection('posts');
---

<Layout title={title}>
  <main class="min-h-screen bg-white text-gray-900 max-w-3xl mx-auto py-12 px-4">
    <h1 class="text-3xl font-serif mb-8">ブログ</h1>

    <div class="space-y-8">
      {posts.map(post => (
        <article class="border rounded-lg p-6 hover:shadow-md transition">
          <div class="flex justify-between items-start mb-2">
            <h2 class="text-2xl font-serif">
              <a href={`/posts/${post.slug}`} class="hover:underline">
                {post.data.title}
              </a>
            </h2>
            <span class="bg-gray-100 text-gray-800 text-sm px-3 py-1 rounded-full">
              {post.data.category}
            </span>
          </div>
          
          <time class="text-gray-500 text-sm">
            {post.data.date.toLocaleDateString('ja-JP')}
          </time>
          
          <p class="mt-4">{post.data.description}</p>
          
          <div class="mt-6 p-4 bg-gray-50 rounded-lg">
            <a href={`/posts/${post.slug}`} class="text-blue-600 hover:underline">
              続きを読む →
            </a>
          </div>
        </article>
      ))}
    </div>
  </main>
</Layout>
